#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>


float* printRandoms(int lower, int upper,
                            int count)
{
    int i;
    int num;
    static float array[4];
    float somme =0; //Calcul le temps du tour complet
    
    for (i = 0; i < count; i++) {
        num = (rand() %
        (upper - lower + 1)) + lower;
        
        float temps = (num *0.001); //récupère le temps fait
    
    	array[i] = temps; //  met le temps dans un array
    	//printf("%.3f ", array[i]); // print à 3déciaml les temps
    	somme += temps;
    }
    array[3] = somme;
    
    return array;
}
 

int main()
{
	int i=0;
	float *score;
	int lower = 25000, upper = 45000, count = 3; // temps min/max possible et nombre d'itérations
	srand(time(0));
	score = printRandoms(lower, upper, count);
	for ( i = 0; i < 3; i++ ) {
      printf( "temps sécteur numéro %i : %.3fs ",i+1, score[i]);
    }
    printf("temps total tour : %.3fs ", score[3]);
	
	
	
	return 0;
	

}

//Pour le moment, le code permet de générer des tours de durée random par la fonction printRandoms qui renvoie un array[4] avec les 3 valeurs = la somme finale. je l'appelle depuis la fonciton main et print le résultat (donc normalement tout fonctionne) Pour finir la 1ere semaine, il faudrait pouvoir stocker les valeurs, ensuite rappeler en boucle la fonction random (18 fois je pesne, si les voitures font 18 tours) et à chaque fois comparer les  valeurs et garder le meilleur de chaque section et/ou finale. Ca devrait pas être trop compliqué
